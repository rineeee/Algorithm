def solution(n,a,b):
    answer = 1

    while True:
        if (max(a,b) % 2 == 0) and (min(a,b) == max(a,b) -1):
            break
        else:
            if a % 2 == 0:
                a = a//2
            else:
                a = a//2 + 1
            if b % 2 == 0:
                b = b//2
            else:
                b = b//2 + 1
        answer += 1
            

    return answer
