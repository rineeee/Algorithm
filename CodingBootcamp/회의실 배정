import sys
input = lambda: sys.stdin.readline().rstrip()

n = int(input())
time = []
for _ in range(n):
    start, end = map(int, input().split())
    time.append([start, end])

time.sort(key=lambda x: (x[0],x[1]))

last = 0
answer = 0
for i,j in time:
    if i >= last:
        answer += 1
        last = j
print(answer)
