def solution(stones, k):
    start = 0
    end = max(stones)
    while start <= end:
        mid = (start + end) // 2
        cnt = 0
        
        for stone in stones:
            if stone - mid <= 0:
                cnt += 1
            else:
                cnt = 0
            if cnt >= k:
                break
        if cnt >= k:
            end = mid -1
        else:
            start = mid + 1
    return start
