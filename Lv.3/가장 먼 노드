def solution(n, edge):
    adj = [[] for _ in range(n + 1)]
    for v1, v2 in edge:
        adj[v1].append(v2)
        adj[v2].append(v1)
    
    ch = [0 for _ in range(n + 1)]
    ch[1] = 1
    
    queue = [1]
    
    while queue:
        cur = queue.pop(0)
        for dest in adj[cur]:
            if not ch[dest]:
                ch[dest] = ch[cur] + 1
                queue.append(dest)
        
    return ch.count(max(ch))
